<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
>
    <FontFamily x:Key="ThemeFontFamily">Segoe WP, Segoe UI</FontFamily>
    <sys:Double x:Key="StandardFontSize">15</sys:Double>
    <sys:Double x:Key="HeadingFontSize">29</sys:Double>
    <sys:Double x:Key="SubHeaderFontSize">24</sys:Double>
    <sys:Double x:Key="ErrorHeaderFontSize">18</sys:Double>
    <sys:Double x:Key="MinorHeaderFontSize">18</sys:Double>
    <sys:Double x:Key="LinkButtonFontSize">17</sys:Double>

    <Thickness x:Key="SubHeaderMarginWideLeft">10,0,0,10</Thickness>
    <Thickness x:Key="SubHeaderMargin">0,0,0,10</Thickness>
    <Thickness x:Key="MinorHeaderMargin">0,0,0,6</Thickness>
    <Thickness x:Key="HeaderMargin">0,0,0,10</Thickness>
    <Thickness x:Key="TextMargin">0,0,0,6</Thickness>

    <Style TargetType="{x:Type Window}">
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
    </Style>
</ResourceDictionary>